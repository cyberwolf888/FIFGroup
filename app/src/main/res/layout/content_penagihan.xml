<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fifgroup.penagihan.fifgroup.Penagihan"
    tools:showIn="@layout/activity_penagihan"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/penagihan_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/penagihan_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/static_no_kontrak"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:text="No Kontrak"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtNoKontrak"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="0dip"
                android:text="738292928838"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/static_nama"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:text="Nama Customer"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtNama"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="0dip"
                android:text="I Gusti Suajana"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/static_alamat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:text="Alamat Penagihan"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtAlamat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="0dip"
                android:text="jalan Nangka Utara No. 12"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/static_no_hp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:text="Nomer HP"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtNomerHp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="0dip"
                android:text="085735736473"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/static_hutang"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:text="Hutang Pokok"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtHutang"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="0dip"
                android:text="Rp. 2000.000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/static_telah_bayar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:text="Telah Bayar"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtTelahBayar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="0dip"
                android:text="Rp. 800.000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/static_agsuran"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:text="Angsuran"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtAngsuran"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="0dip"
                android:text="Rp. 200.000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/static_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:text="Status Pembayaran"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="0dip"
                android:text="Belum Bayar"
                android:textSize="16sp"
                android:textStyle="bold" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_bayar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total bayar"
                    android:imeActionId="@+id/bayar"
                    android:imeActionLabel="Total bayar"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/txt_angsuran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Angsuran ke"
                    android:imeActionId="@+id/angsuran"
                    android:imeActionLabel="Angsuran ke"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_tagih"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tagih"
                android:onClick=""
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
